{
  "name": "Vortex-Xmd",
  "description": "JavaScript WhatsApp bot made by HansTech",
  "logo": "https://files.catbox.moe/neni8p.jpg",
  "keywords": ["Vortex-Xmd"],
  "success_url": "/",
  "stack": "heroku-24",
  "env": {
    "SESSION_ID": {
      "description": "Put the session ID here.",
      "required": true,
      "value": ""
    },
    "STICKER_NAME": {
      "description": "Sticker pack name.",
      "required": false,
      "value": "𝐕𝐎𝐑𝐓𝐄𝐗-𝐗𝐌𝐃"
    },
    "PREFIX": {
      "description": "Bot command prefix. Do not leave empty or null.",
      "required": false,
      "value": "."
    },
    "ANTI_CALL": {
      "description": "Reject incoming calls automatically.",
      "required": false,
      "value": "false"
    },
    "ANTI_CALL_BLOCK": {
      "description": "Reject and block caller after 5 calls.",
      "required": false,
      "value": "false"
    },
    "MODE": {
      "description": "Bot operation mode: public, private, group, or inbox.",
      "required": false,
      "value": "public"
    },
    "CHAT_BOT": {
      "description": "Enable chatbot auto replies (true/false).",
      "required": false,
      "value": "true"
    },
    "ANTI_DELETE": {
      "description": "Show deleted messages if true.",
      "required": false,
      "value": "false"
    },
    "ALWAYS_ONLINE": {
      "description": "Always show bot as online.",
      "required": false,
      "value": "false"
    },
    "AUTO_REPLY": {
      "description": "Send automatic replies to chats.",
      "required": false,
      "value": "true"
    },
    "AUTO_STICKER": {
      "description": "Send stickers automatically.",
      "required": false,
      "value": "false"
    },
    "AUTO_STATUS_SEEN": {
      "description": "Automatically view WhatsApp statuses.",
      "required": true,
      "value": "true"
    },
    "AUTO_STATUS_REACT": {
      "description": "React to status updates automatically.",
      "required": true,
      "value": "true"
    },
    "AUTO_STATUS_REPLY": {
      "description": "Reply to statuses automatically.",
      "required": true,
      "value": "false"
    },
    "AUTO_STATUS_MSG": {
      "description": "Message to send when replying to status.",
      "required": true,
      "value": "*SEEN YOUR STATUS BY 𝐕𝐎𝐑𝐓𝐄𝐗-𝐗𝐌𝐃 🖤*"
    },
    "OWNER_NAME": {
      "description": "Bot owner name.",
      "required": false,
      "value": "HansTz"
    },
    "OWNER_NUMBER": {
      "description": "Owner's WhatsApp number with country code.",
      "required": false,
      "value": "2126479286XX"
    },
    "BOT_NAME": {
      "description": "Bot name.",
      "required": false,
      "value": "𝐕𝐎𝐑𝐓𝐄𝐗-𝐗𝐌𝐃"
    },
    "ANTI_LINK": {
      "description": "Delete group links if found.",
      "required": true,
      "value": "false"
    },
    "ANTI_LINK_KICK": {
      "description": "Kick member if group link is detected.",
      "required": true,
      "value": "false"
    },
    "ANTI_BAD": {
      "description": "Delete messages with bad words.",
      "required": false,
      "value": "false"
    },
    "MENTION_REPLY": {
      "description": "Auto reply if someone mentions the bot.",
      "required": false,
      "value": "false"
    },
    "MENU_IMAGE_URL": {
      "description": "Image URL for menu or replies.",
      "required": false,
      "value": "https://files.catbox.moe/di5kdx.jpg"
    },
    "DESCRIPTION": {
      "description": "Custom bot description or caption for menu.",
      "required": false,
      "value": "*© ᴘᴏᴡᴇʀᴇᴅ ʙʏ Hanstz*"
    },
    "DELETE_LINKS": {
      "description": "Delete links from group without kicking member.",
      "required": false,
      "value": "false"
    },
    "AUTO_RECORDING": {
      "description": "Auto show recording status.",
      "required": false,
      "value": "false"
    },
    "AUTO_TYPING": {
      "description": "Auto show typing status.",
      "required": false,
      "value": "true"
    },
    "AUTO_REACT": {
      "description": "React to every message.",
      "required": false,
      "value": "false"
    },
    "CUSTOM_REACT": {
      "description": "Enable custom emoji reactions.",
      "required": false,
      "value": "false"
    },
    "CUSTOM_REACT_EMOJIS": {
      "description": "Custom emojis for reactions (comma separated).",
      "required": false,
      "value": "💝,💖,💗,❤️‍🩹,❤️,🧡,💛,💚,💙,💜,🤎,🖤,🤍"
    },
    "ANTI_DEL_PATH": {
      "description": "Where to resend deleted messages: 'same' or 'inbox'.",
      "required": false,
      "value": "some"
    },
    "ADMIN_EVENTS": {
      "description": "Announce admin promotion/demotion.",
      "required": false,
      "value": "false"
    },
    "WELCOME": {
      "description": "Enable welcome/goodbye messages in groups.",
      "required": false,
      "value": "false"
    },
    "READ_MESSAGE": {
      "description": "Mark messages as read.",
      "required": false,
      "value": "false"
    }

},

     "buildpacks": [
        {
            "url": "https://github.com/heroku/heroku-buildpack-nodejs.git"
        }
     ],
  "stack": "heroku-24"
}
  
